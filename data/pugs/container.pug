mixin container(title, openingTag, closingTag)
  div(class="container justify-content-start align-items-center my-5" id=title)
    h2(class="h2")= title + " " + openingTag
    hr
    div(class="row justify-content-center text-center align-items-center my-4")
      block
    h2(class="h2")= closingTag